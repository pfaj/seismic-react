#!/usr/bin/env bash
set -e
if [[ ! -d "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic/.envrc" "/home/mono/Documents/projects/WebDevelopmentFall24/ReactSeismic/.direnv"/*.rc
